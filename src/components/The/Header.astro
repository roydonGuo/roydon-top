---
import { site } from "src/config";
---

<header id="header">
  <h1>
    <a href="/" class="site-icon">{site.author}</a>
  </h1>
  <div class="site-buttons">
    <button class="site-button" onclick="toggleNav()">
      <svg
        class="icon"
        viewBox="0 0 1024 1024"
        version="1.1"
        xmlns="http://www.w3.org/2000/svg"
        p-id="10911"
        ><path
          d="M416 64H128c-35.2 0-64 28.8-64 64v288c0 35.2 28.8 64 64 64h288c35.2 0 64-28.8 64-64V128c0-35.2-28.8-64-64-64zM896 64h-288c-35.2 0-64 28.8-64 64v288c0 35.2 28.8 64 64 64h288c35.2 0 64-28.8 64-64V128c0-35.2-28.8-64-64-64zM416 544H128c-35.2 0-64 28.8-64 64v288c0 35.2 28.8 64 64 64h288c35.2 0 64-28.8 64-64v-288c0-35.2-28.8-64-64-64zM896 544h-288c-35.2 0-64 28.8-64 64v288c0 35.2 28.8 64 64 64h288c35.2 0 64-28.8 64-64v-288c0-35.2-28.8-64-64-64z"
          p-id="10912"></path></svg
      >
    </button>
    <button class="site-button" onclick="toggleDarkMode()">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        class="h-5 w-5"
        ><path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
        ></path></svg
      >
    </button>
    <a
      class="site-button"
      href="https://travellings.cn/go.html"
      target="_blank"
      title="开往·友链接力"
    >
      <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"
        ><path
          d="M96 0C43 0 0 43 0 96V352c0 48 35.2 87.7 81.1 94.9l-46 46C28.1 499.9 33.1 512 43 512H82.7c8.5 0 16.6-3.4 22.6-9.4L160 448H288l54.6 54.6c6 6 14.1 9.4 22.6 9.4H405c10 0 15-12.1 7.9-19.1l-46-46c46-7.1 81.1-46.9 81.1-94.9V96c0-53-43-96-96-96H96zM64 128c0-17.7 14.3-32 32-32h80c17.7 0 32 14.3 32 32v96c0 17.7-14.3 32-32 32H96c-17.7 0-32-14.3-32-32V128zM272 96h80c17.7 0 32 14.3 32 32v96c0 17.7-14.3 32-32 32H272c-17.7 0-32-14.3-32-32V128c0-17.7 14.3-32 32-32zM64 352a32 32 0 1 1 64 0 32 32 0 1 1 -64 0zm288-32a32 32 0 1 1 0 64 32 32 0 1 1 0-64z"
        ></path></svg
      >
    </a>
  </div>
</header>
<script is:inline>
  function toggleDarkMode() {
    document.documentElement.classList.toggle("dark");
  }
</script>

<style>
  #header {
    width: 100%;
    height: 6em;
    padding: 1em 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  #header .site-icon {
    height: 3em;
    font-size: 14px;
    font-weight: bold;
    color: rgba(var(--text-color-meta), 1);
    background: var(--card-bg);
    display: flex;
    align-items: center;
    padding: 0 1em;
    border-radius: 2em;
    border: 3px solid var(--border-color);
  }
  #header .site-icon:hover {
    background: var(--card-hover-bg);
  }
  #header .site-icon-img {
    width: 100%;
    height: 100%;
  }
  #header .site-buttons {
    display: flex;
    align-items: center;
    gap: 0.5em;
  }
  #header .site-button {
    display: inline-block;
    width: 3em;
    height: 3em;
    font-size: 12px;
    border: none;
    outline: none;
    padding: 0.75em;
    border: 3px solid var(--border-color);
    border-radius: 50%;
    background: var(--card-bg);
    color: rgba(var(--text-color-meta), 1);
  }
  #header .site-button:hover {
    background: var(--card-hover-bg);
  }
</style>
